@page "/fetchdata"

@using ProjectEshop.Web.Data
@using ProjectEshop.Web.ApiClients
@inject IProjectEshopApiClients ApiClient

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (manufacturers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    



    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manufacturer in manufacturers)
            {
                <tr>
                    <td>@manufacturer.ManufacturerName</td>
                    
                </tr>
            }
        </tbody>
    </table>
}



@code {
    private ICollection<ManufacturerDto> manufacturers;

    protected override async Task OnInitializedAsync()
    {
        manufacturers = await ApiClient.ManufacturerGetAllAsync();
    }


    protected async Task OnButtonClick()
    {
        var products = await ApiClient.ProductGetAllAsync();
    }
}
